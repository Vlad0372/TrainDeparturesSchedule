@page
@model TrainDeparturesSchedule.Pages.DeparturesManagement.IndexAdminModel
@{
    if(TempData["success"] != null)
    {
        <h2>@TempData["success"]</h2>
    }
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Train Departures</h2>
        </div>
        <div class="col-6  text-end">
            <a asp-page="create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;  New Train Departure
            </a>
        </div>
    </div>
    
    <br /><br />

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Train
                </th>
                <th>
                    Number
                </th>
                <th>
                    Time
                </th>
                <th>
                    Destination
                </th>
                <th>
                    Remarks
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model.TrainDepartures)
            {
                <tr>
                    <td width="16%">@obj.Train</td>
                    <td width="14%">@obj.Number</td>
                    <td width="15%">@obj.Time</td>
                    <td width="25%">@obj.Destination</td>
                    <td width="20%">@obj.Remarks</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                         <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                        </div>                   
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
